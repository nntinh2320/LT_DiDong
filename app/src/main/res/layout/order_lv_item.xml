<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical"
    app:cardElevation="4dp"
    app:cardCornerRadius="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:orientation="vertical">
        
        <TextView
            android:id="@+id/tvordate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#F0CBF6"
            android:padding="6dp"
            android:text="Ngày đặt hàng"
            android:textAlignment="viewEnd"
            android:textColor="#120000"
            android:textSize="14dp"/>

        <TextView
            android:id="@+id/textView17"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="Mã đơn hàng"
            android:textColor="#000000"
            android:textSize="14dp"/>
        
        <TextView
            android:id="@+id/textView18"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="4dp"
            android:text="Trạng thái đơn hàng"
            android:textColor="#000000"
            android:textSize="14dp"/>

        <TextView
            android:id="@+id/tvoramt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#F0CBF6"
            android:padding="6dp"
            android:text="Số tiền phải thanh toán"
            android:textAlignment="viewEnd"
            android:textColor="#000000"
            android:textSize="14dp"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>